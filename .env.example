# OpenClaw Docker Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Providers (at least one required)
# =============================================================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENROUTER_API_KEY=
MINIMAX_API_KEY=

# Model override (optional - auto-selects based on available keys)
# OPENCLAW_MODEL=anthropic/claude-sonnet-4

# =============================================================================
# Messaging Channels
# =============================================================================

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=

# WhatsApp
WHATSAPP_ENABLED=false
WHATSAPP_ALLOWED_NUMBERS=

# Discord
DISCORD_BOT_TOKEN=

# Slack
SLACK_APP_TOKEN=
SLACK_BOT_TOKEN=

# =============================================================================
# Gateway
# =============================================================================

# Auth token (auto-generated and persisted if not set)
# OPENCLAW_GATEWAY_TOKEN=

# =============================================================================
# Text-to-Speech (sag)
# =============================================================================

# ElevenLabs API key for TTS
ELEVENLABS_API_KEY=

# Default voice ID (optional)
# SAG_VOICE_ID=
